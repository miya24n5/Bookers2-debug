<% if book.favorited_by?(current_user) %>
  <%= link_to '❤', book_favorites_path(book), method: :delete, remote: true, data: {"turbolinks" => false} %><%= book.favorites.count %>
<% else %>
  <%= link_to '♡', book_favorites_path(book), method: :post, remote: true %><%= book.favorites.count %>
<% end %>